# Environment Variables Template for Trend Pulse
# Copy this file to .env.local for development or set in production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://trendpulse.life
NEXT_PUBLIC_SITE_NAME=Trend Pulse
NEXT_PUBLIC_SITE_DESCRIPTION=Real-time news and analysis

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://trendpulse.life/api

# Automation Integration (Production paths)
AUTOMATION_ARTICLES_PATH=/path/to/trend-pulse-automation/output/articles.json
AUTOMATION_API_PATH=/path/to/trend-pulse-automation/output/api/articles.json

# Analytics (Google Analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-V68Y54670S

# Newsletter Service (ConvertKit, Mailchimp, etc.)
NEXT_PUBLIC_NEWSLETTER_API_KEY=your_api_key_here
NEXT_PUBLIC_NEWSLETTER_FORM_ID=your_form_id_here

# Security
NEXT_PUBLIC_CSRF_TOKEN=your_csrf_token_here

# Performance
NEXT_PUBLIC_CACHE_TTL=3600

# Development Only
NODE_ENV=development